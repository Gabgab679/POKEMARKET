<div class="container">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">My pokedexs</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">My request</button>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <%# MY POKEDEX %>
    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
      <% if current_user.cards.empty? %>
        <p>No cards in your pokedex</p>
      <% else %>
        <div class="row">
          <% current_user.cards.each do |card|%>
            <div class="col-4 bg-secondary p-4" style="background-image: url(<%= card.image %>); background-size: cover;">
              <p><%= card.name %></p>
              <p><%= card.price %></p>
              <div class="badge text-bg-primary"><%= card.sale ? "pending" : "sold" %></div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <%# MY REQUESTS  %>
    <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
     <% if current_user.card_requests.empty? %>
        <p>No request yet</p>
      <% else %>
        <div class="row">
          <% current_user.card_requests.each do |card|%>
            <div class="col-4 bg-secondary p-4" style="background-image: url(<%= card.image %>); background-size: cover;">
              <p> <%= card.name  %> </p>
              <p> <%= card.price  %> </p>
              <%#  if in line %>
              <div class="badge text-bg-primary"><%= card.sale ? "pending" : "sold" %></div>
            </div>
          <% end %>
        </div>
      <% end %></div>
  </div>
</div>
